@using TicketApplication.Models.Models;
@model List<Movie>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Customer" asp-controller="Movie" asp-action="Upsert"  class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>Add a new movie
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Movie Name</th>
        <th>Release Year</th>
        <th>Genre</th>
        <th>Ticket price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model )
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.ReleaseYear</td>
                <td>@obj.Category</td>
                <td>@obj.TicketPrice</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Movie" asp-action="Upsert" asp-route-id="@obj.Id" class="btn bnt-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                    <div class="btn-group" role="group">
                        <a  asp-controller="Movie" asp-action="Delete" asp-route-id="@obj.Id" class="btn bnt-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>