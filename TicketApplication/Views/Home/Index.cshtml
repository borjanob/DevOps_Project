@using TicketApplication.Models.Models;
@model IEnumerable<Movie>

<div class="row pb-3">
    @foreach (var obj in Model)
    {
        <div class="col-3">
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@obj.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-center text-uppercase">@obj.Name</p>
                                <p class="card-title h5 text-warning text-center">@obj.Description</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-center text-uppercase">@obj.TicketPrice$</p>
                                <p class="card-title h5 text-black text-center">DODAJ KOLKU TICKETS IMA AVAILABLE</p>
                            </div>
                        </div>
                        <div>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>