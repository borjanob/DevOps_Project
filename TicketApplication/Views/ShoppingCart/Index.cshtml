@using TicketApplication.Models.Models;
@model ShoppingCart


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Movies list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Movie" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>Add a new movie
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Number of tickets</th>
                <th>Ticket price</th>
                <th></th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var obj in Model.showingsInShoppingCarts)
            {
                <tr>
                    <td>@obj.MovieShowing.Movie.Name</td>
                    <td>@obj.Quantity</td>
                    <td>@obj.MovieShowing.Movie.TicketPrice</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <h2>Total sum of shopping cart: @Model.totalSum</h2>
    </div>
</div>