@using TicketApplication.Models.Models;
@model ShoppingCart


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Shopping cart for: @Model.User.UserName</h2>
        </div>

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Number of tickets</th>
                <th>Ticket price</th>
                <th></th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var obj in Model.showingsInShoppingCarts)
            {
                <tr>
                    <td>@obj.MovieShowing.Movie.Name</td>
                    <td>@obj.Quantity</td>
                    <td>@obj.MovieShowing.Movie.TicketPrice</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <h2>Total sum of shopping cart: @Model.totalSum</h2>
    </div>
</div>